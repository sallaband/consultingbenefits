Enter your information
<BR>
 <%= form_for @prospect do |f| %>
<table width="400" border="0">
  <tr>
    <td>First Name:</td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <td>Last Name:</td>
    <td><%= f.text_field :last_name %></td>
  </tr>
  <tr>
    <td>Title: </td>
    <td><%= f.text_field :contact_title %></td>
  </tr>
  <tr>
    <td>Company Name:</td>
    <td><%= f.text_field :contact_name %></td>
  </tr>
  <tr>
    <td>Phone:</td>
    <td><%= f.text_field :phone %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td> <%= f.text_field :email %></td>
  </tr>
  <tr>
    <td>Number of Employees:</td>
    <td><%= f.text_field :number_employees %></td>
  </tr>
  <tr>
    <td>Address:</td>
    <td> <%= f.text_area :contact_address %></td>
  </tr>
  <tr>
    <td>Please describe your current accounting system: </td>
    <td> <%= f.text_area :current_accounting_system %></td>
  </tr>
  <tr>
    <td>Please describe any outstanding loans: </td>
    <td> <%= f.text_area :loans %></td>
  </tr>
  <tr>
    <td>Please describe the equity structure of the company: </td>
    <td> <%= f.text_area :equity %></td>
  </tr>
  <tr>
    <td>Please describe the way that bills are managed: </td>
    <td> <%= f.text_area :bills %></td>
  </tr>
  <tr>
    <td>Please describe the way that invoices are managed: </td>
    <td> <%= f.text_area :invoices %></td>
  </tr>
</table>
  <%= f.submit %>
  <font color="red">
    <% if flash.now[:errors] %>
    <% flash.now[:errors].each do |error| %>
    <%= error %><br>
    <% end %>
    <% end %>
  </font>
  <% end %>
